<% if post.present? %>
  <div class="post">
    <div class="post_header">
      <h2 class="title">
        <%= post.title %>
      </h2>
      <%= fa_icon 'clock-o' %><p class="posted_at"><%= post.posted_at.strftime('%Y.%m.%d') %></p>
      <%= render 'admin/posts/tags', tag_list: post.tag_list %>
    </div>
    <div class="post_body">
      <div class="markdown_view">
        <%= markdown post.body %>
      </div>
    </div>
  </div>
<% end %>